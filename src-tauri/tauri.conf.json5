{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ChartBuddha",
  "version": "0.1.0",
  "identifier": "com.chartbuddha.app",
  "mainBinaryName": "Chartbuddha",
  // Configuration: App
  "app": {
    // Security
    "security": {
      "csp": null //,
      // "capabilities": [
      //   "default",
      //   "desktop"
      // ]
    },
    // Capabilities
    // Window
    "windows": [
      {
        "title": "ChartBuddha: Main",
        "label": "main",
        "visible": false,
        "resizable": true,
        "width": 1280,
        "height": 800,
        "minWidth": 640,
        "minHeight": 400,
        "center": true,
        "maximized": true,
        "devtools": true
      },
      {
        "title": "ChartBuddha: Loading...",
        "label": "splash",
        "url": "/splash.html",
        "width": 800,
        "height": 600,
        "maxWidth": 800,
        "maxHeight": 600,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": false,
        "decorations": false,
        "alwaysOnTop": true,
        "center": true,
        "devtools": true
      }
    ],
    "withGlobalTauri": true
  },
  // Configuration: Build
  "build": {
    // Development build
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    // Production build
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  // Configuration: Bundler
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  // Configuration: Plugins
  "plugins": {}
}

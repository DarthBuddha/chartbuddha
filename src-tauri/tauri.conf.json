{
  "$schema": "https://schema.tauri.app/config/2.2.3",
  "productName": "chartbuddha",
  "version": "0.1.0",
  "identifier": "com.chartbuddha.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "security": {
      "csp": null
    },
    "windows": [
      {
        "title": "main",
        "visible": false,
        "width": 1280,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      },
      {
        "label": "splashscreen",
        "url": "/splashscreen"
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {}
}
